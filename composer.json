{
    "name": "littlerocket/php-pdf",
    "description": "Pdf and graphic files generator library for PHP. Fixed for PHP7",
    "keywords": ["PDF", "PHPPdf"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name":     "Daan Gebraad",
            "homepage": "https://littlerocket.nl",
            "email":    "daan@littlerocket.nl"
        }
    ],
    "require": {
        "php": "^8.3",
        "littlerocket/laminas-pdf":  "^3.0.3",
        "laminas/laminas-cache": "^2.5"
    },
    "require-dev": {
        "imagine/imagine": "^1.5",
        "phpunit/phpunit": "^12.2",
        "rector/rector": "^2.1",
        "laminas/laminas-barcode": "^2.5"
    },
    "suggest": {
    	"laminas/laminas-barcode":  "If you want to use barcodes",
    	"imagine/imagine": "If you want to use image generating (required version: >=v0.2.6)"
    },
    "autoload": {
        "psr-0": { "PHPPdf": "lib/", "Imagine": "lib/" }
    }
}
